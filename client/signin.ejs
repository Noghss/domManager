<!-- client/signin.ejs -->

<!doctype html>

<html>

	<head>
		
		<title>Dom Manager</title>
		
		<link href="/thirdpart/bootstrap/dist/css/bootstrap.css"	 					rel="stylesheet" >
		<link href="/thirdpart/bootstrap-additions/dist/bootstrap-additions.min.css" 	rel="stylesheet" >
		<link href="/thirdpart/angularjs-toaster/toaster.min.css" 						rel="stylesheet" >
		<link href="/thirdpart/ladda/dist/ladda-themeless.min.css" 						rel="stylesheet" >
		<link href="/thirdpart/font-awesome/css/font-awesome.min.css" 					rel="stylesheet" >
		
		<link href="/styles/main.css" rel="stylesheet" >
		
	</head>
	
	<body>
	
		<div class="container">
		
			<div class="col-sm-6 col-sm-offset-3">
			
				<h1><span class="fa fa-sign-in"></span> Login</h1>
			
				<!-- show any messages that come back with authentication -->
				<% if (message.length > 0) { %>
					<div class="alert alert-danger"><%= message %></div>
				<% } %>
			
				<!-- LOGIN FORM -->
				<form action="/login" method="post">
					
					<div class="form-group">
						<label>Email</label>
						<input type="text" class="form-control" name="email">
					</div>
					
					<div class="form-group">
						<label>Password</label>
						<input type="password" class="form-control" name="password">
					</div>
			
					<button type="submit" class="btn btn-primary btn-lg">Login</button>
				
				</form>
			
				<hr>
			
				<p>Need an account? <a href="/signup">Signup</a></p>
				<p>Or go <a href="/">home</a>.</p>
			
			</div>
		
		</div>
		
	</body>

</html>